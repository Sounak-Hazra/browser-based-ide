{
  "compilerOptions": {
    /* === Paths === */
    "rootDir": ".",             // Start compiling from backend root
    "outDir": "./dist",          // JS output directory

    /* === Language & Module Settings === */
    "target": "ES2020",          // Works perfectly with Node 18+
    "module": "ESNext",          // Keep modern import/export
    "moduleResolution": "Node",  // For resolving Node modules
    "esModuleInterop": true,     // Allow default imports from CommonJS
    "resolveJsonModule": true,   // Allow importing JSON files

    /* === Type Checking === */
    "strict": true,              // Enable strict mode
    "skipLibCheck": true,        // Skip type checking for dependencies
    "forceConsistentCasingInFileNames": true,

    /* === Node Environment === */
    "lib": ["ESNext"],           // No browser DOM stuff
    "types": ["node"],           // Add Node types

    /* === Source Maps === */
    "sourceMap": true,           // Allow debugging original .ts files
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": ["./**/*.ts"],      // Include all TS files
  "exclude": ["node_modules", "dist"]
}
